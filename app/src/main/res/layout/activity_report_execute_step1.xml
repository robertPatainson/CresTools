<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lafayeboulhalfa.app.crestools.ReportExecuteStep1Activity">
    <LinearLayout
        android:id="@+id/linearLayoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            android:background="@color/colorTheme">
            <ImageButton
                android:id="@+id/imageButtonLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/horizontal_default_margin"
                android:layout_gravity="top"
                android:src="@drawable/ic_previous"
                android:tint="@color/White"
                android:background="@drawable/button_toolbar"/>
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Report"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/imageButtonRight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_marginEnd="@dimen/horizontal_default_margin"
                android:src="@drawable/ic_edit"
                android:tint="@color/White"
                android:background="@drawable/button_toolbar"/>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <ScrollView
            android:id="@+id/scrollViewMainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayoutTitle"
            android:layout_above="@id/relativeLayoutReportExecute"
            android:background="@color/BrokenWhite">
            <RelativeLayout
                android:id="@+id/relativeLayoutMainContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeLayoutTitle"
                android:background="@color/BrokenWhite">
                <TextView
                    android:id="@+id/textViewSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/horizontal_default_margin"
                    android:layout_marginTop="@dimen/vertical_default_margin"
                    android:text="NAME"
                    android:textSize="14dp" />
                <RelativeLayout
                    android:id="@+id/relativeLayoutReportName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/vertical_default_margin"
                    android:layout_below="@+id/textViewSubtitle"
                    android:background="@drawable/button">
                    <TextView
                        android:id="@+id/textViewReportName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/horizontal_default_margin"
                        android:gravity="left"
                        android:textAllCaps="true"
                        android:text="Report name"
                        android:textColor="@color/LightBlack"
                        android:textSize="16dp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/textViewSubtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/relativeLayoutReportName"
                    android:layout_marginTop="@dimen/vertical_default_margin"
                    android:layout_marginLeft="@dimen/horizontal_default_margin"
                    android:text="COMMANDS" />
                <LinearLayout
                    android:id="@+id/layout_buttonsDefaultReports"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textViewSubtitle2"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/relativeLayoutReportExecute"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button">
            <TextView
                android:id="@+id/textViewSubtitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonExecuteReport"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:text="The commands will be sent one by one in this exact order"
                android:textSize="10dp"/>

            <Button
                android:id="@+id/buttonExecuteReport"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_success"
                android:gravity="center"
                android:paddingEnd="25dp"
                android:paddingStart="25dp"
                android:text="Execute"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
