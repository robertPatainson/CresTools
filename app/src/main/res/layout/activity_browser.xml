<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lafayeboulhalfa.app.crestools.BrowserActivity">
    <LinearLayout
        android:id="@+id/linearLayoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            android:background="@color/colorTheme">
            <ImageButton
                android:id="@+id/imageButtonLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/horizontal_default_margin"
                android:layout_gravity="top"
                android:src="@drawable/ic_close"
                android:tint="@color/White"
                android:background="@drawable/button_toolbar"/>
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Browser"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/imageButtonRight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_marginEnd="@dimen/horizontal_default_margin"
                android:src="@drawable/ic_add"
                android:tint="@color/Gray"
                android:background="@drawable/button_toolbar"/>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/textViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayoutTitle"
            android:layout_marginTop="@dimen/vertical_default_margin"
            android:layout_marginLeft="@dimen/horizontal_default_margin"
            android:gravity="center"
            android:text="SEARCHING ... "/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/textViewSubtitle"
            android:layout_toEndOf="@+id/textViewSubtitle"
            android:layout_toRightOf="@+id/textViewSubtitle"
            android:layout_marginLeft="@dimen/horizontal_default_margin"
            android:indeterminate="true"/>
        <LinearLayout
            android:id="@+id/layout_checkBoxesAddresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSubtitle"
            android:layout_marginTop="@dimen/vertical_default_margin"
            android:orientation="vertical">
            <View
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorDisabled"
                android:visibility="invisible"/>
            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:divider="@drawable/marged_line">
            </ListView>
            <View
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorDisabled"
                android:visibility="invisible"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textViewLegend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_checkBoxesAddresses"
            android:layout_marginTop="@dimen/vertical_default_margin"
            android:layout_marginStart="@dimen/horizontal_default_margin"
            android:layout_marginEnd="@dimen/horizontal_default_margin"
            android:text="Use &quot;Add device&quot; to connect any found device requiring a SSL or SSH connection"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
